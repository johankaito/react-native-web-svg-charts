{
    "compilerOptions": {
        "jsx": "react",
        /* Basic Options */
        "target": "ES2020",
        "module": "commonjs",
        "allowJs": true,
        "resolveJsonModule": true,
        // "noEmit": true,
        "maxNodeModuleJsDepth": 2,
        /* Strict Type-Checking Options */
        "strict": true,
        "noImplicitAny": false,
        "strictNullChecks": false,
        /* Additional Checks */
        "noUnusedLocals": true,
        "esModuleInterop": true
    }
}